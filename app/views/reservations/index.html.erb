<% end %>

  
  <div class="container">
    <h5>Upcoming Stays:</h5>
    <% @upcoming_reservations.each do |reservation| %>
      <%= render 'reservations/reservation_card', reservation: reservation %>
    <% end %>
    <h5>Where you've stayed:</h5>
    <% @past_reservations.each do |reservation| %>
      <%= render 'reservations/reservation_card', reservation: reservation %>
    <% end %>
  
  </div>

