<h3>Guides</h3>
<div class="container-fluid d-flex">
  <% articles.each do |article| %>
    <%= link_to  article_path(article.id), target: "_blank" do %>
      <div class="card text-center card-article mr-2 flex-fill align-items-center" style="height: 100px; border-radius: 5px; justify-content: center;">
        <h6><%= article.title.gsub('_', ' ').capitalize %></h6>
      </div>
    <% end %>
  <% end %>
</div>
