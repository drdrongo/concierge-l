<div class="container-fluid container-articles">
  <% articles.each do |article| %>
    <%= link_to  article_path(article.id), target: "_blank" do %>
      <div class="card text-center card-article align-items-center">
        <%= image_tag("icons/#{article.title.gsub(' ', '_').gsub('/', ':').downcase}.svg") %>
        <h6><%= article.title.gsub('_', ' ').capitalize %></h6>
      </div>
    <% end %>
  <% end %>
</div>
