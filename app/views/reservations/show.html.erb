<div class="container mt-3">
  <%= link_to reservations_path do %>
    <i class="fas fa-arrow-left" style="position: absolute; top: 32px; left: 10px;"></i>
  <% end %>

  <div class="container-fluid">
    <h1 class="font-green">Current Stay</h1>
    <%= image_tag('SL_C_type.jpg', class: "w-100") %>

  <ul class="d-flex justify-content-around nav nav-pills nav-fill mb-3 mt-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Overview</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Guides</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Buddy</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <%= render 'reservation_overview', reservation: @reservation %>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <%= render 'article_cards', articles: @articles %>
    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      <%= render 'buddy.html.erb' %>
    </div>
  </div>

    <%#= render 'change_times', reservation: @reservation %>
  </div>

</div>
