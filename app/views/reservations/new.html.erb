<h2>Create Event</h2>

<%= simple_form_for (@reservation) do |f| %>
  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :reservation_id,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "reservation_id" }%>
    <%= f.input :check_in_date,
                required: true,
                input_html: { autocomplete: "check_in_date" }%>
  </div>

  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary button-green' %>
    <%= link_to 'Cancel', '/home', class: 'btn btn-secondary ml-2' %>
  </div>
<% end %>
