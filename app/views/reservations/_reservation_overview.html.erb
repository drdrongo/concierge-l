<div class="font-grey">
  <div class="card-show-page card-reservation-time d-flex">
    <div class="border-right pr-0" style="flex: 0 0 50%">
      <p class="thick mb-0 font-cadetblue">Check in: </p>
      <p class="mb-0" style="font-size: 2.5vh"><%= reservation.check_in_date.strftime("%b #{reservation.check_in_date.day.ordinalize}")%> <small><%= reservation.check_in_date.strftime("(%a)")%></small></p>
      <p class="m-0" style="font-size: 3vh"><%= (reservation.arrival_time + 9.hours).strftime("%l:%M%p~") %></p>
    </div>

    <div class="ml-3" style="flex: 0 0 50%">
      <p class="thick mb-0 font-cadetblue">Check out: </p>
      <p class="m-0" style="font-size: 2.5vh"><%= reservation.check_out_date.strftime("%b #{reservation.check_out_date.day.ordinalize}")%> <small><%= reservation.check_out_date.strftime("(%a)")%></small></p>
      <p class="m-0" style="font-size: 3vh" ><%= reservation.check_out_date.strftime("~#{(reservation.departure_time + 9.hours).strftime("%l:%M%p")}") %></p>
    </div>
  </div>

  <a data-toggle="collapse" href="#time-request" class="btn btn-dark button-full-width mt-1 mb-1">Change Check-In/Out Time</a>
  <div class="collapse" id='time-request'> <%= render 'change_times', reservation: @reservation %> </div>

  <div class="card-show-page mt-3">
    <p class="thick mb-0 font-cadetblue">Address:</p>
    <p class="mb-0"> <%= reservation.hotel.name %> </p>
    <p> <%= reservation.hotel.address %></p>
    <p class="thick mb-0 font-cadetblue">Room Number:</p>
    <p class="mb-0"> <%= reservation.room_number %></p>
  </div>
  <a class="btn btn-dark button-full-width mt-1 mb-1" target="_blank" href="https://goo.gl/maps/hD8UjpGJk3ppnxtUA">Open on Google Map</a>

  <div class="card-show-page mt-3">
    <p class="thick mb-0 font-cadetblue">Reservation Number: </p>
    <p><%= reservation.reservation_number %></p>
  </div>
  <div class="card-show-page  mt-3">
    <p class="thick mb-0 font-cadetblue">Smartlock & Online Check-in: </p>
    <p class="mb-0">Please read before arrival</p>
  </div>

  <button type="button" class="btn btn-dark button-full-width mt-1 mb-1">Read Check-In Manual</button>

  <div class="card-show-page my-3 pb-3">
    <p class="thick mb-1 font-cadetblue">Amenities </p>
    <p class="mb-2">Check out basic & requestable amenities</p>
    <div class="container-flex-amenities">
      <%= link_to reservation_hotel_amenities_path(@reservation, :category => "Essentials"), style: "color: white;" do %>
        <button class="btn btn-dark mb-1" style="width:150px"> <%= image_tag "icons/towels_&_linens.svg", height:50, class:"icon-white" %><br>Essentials</button>
      <% end %>
      <%= link_to reservation_hotel_amenities_path(@reservation, :category => "Bed & Bath"), style: "color: white;" do %>
      <button class="btn btn-dark mb-1" style="width:150px"><%= image_tag "icons/washer.svg", height:50, class:"icon-white" %> <br> Bed and Bath</button>
      <% end %>
      <%= link_to reservation_hotel_amenities_path(@reservation, :category => "Kitchen"), style: "color: white;" do %>
      <button class="btn btn-dark mb-1" style="width:150px"><%= image_tag "icons/pots_&_pans.svg", height:50, class:"icon-white" %> <br> Kitchen</button>
      <% end %>
      <%= link_to reservation_hotel_amenities_path(@reservation, :category => "Other"), style: "color: white;" do %>
      <button class="btn btn-dark mb-1" style="width:150px"><%= image_tag "icons/phone_charger.svg", height:50, class:"icon-white" %> <br>Others</button>
      <% end %>
    </div>
  </div>
</div>
