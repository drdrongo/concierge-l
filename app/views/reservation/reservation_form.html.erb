<h2>Welcome</h2>

<%= simple_form_for (@reservation) do |f| %>
  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :reservation_numer,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "title" }%
    <%= f.input :arrival_date,
                required: true,
                input_html: { autocomplete: "datetime" }%
  </div>

  <div class="mt-3">
    <%= f.next class: 'btn btn-primary button-green' %>
    <%= link_to 'Cancel', '/home', class: 'btn btn-secondary ml-2' %>
  </div>
<% end %>
