<div class="font-grey">
  <div class="card-show-page card-reservation-time d-flex">
    <div class="border-right pr-0" style="flex: 0 0 50%">
      <p class="font-bright-pink mb-0">Check in: </p>
      <p class="mb-0" style="font-size: 3vh"><%= reservation.check_in_date.strftime("%b #{reservation.check_in_date.day.ordinalize}")%> <small><%= reservation.check_in_date.strftime("(%a)")%></small></p>
      <p class="m-0" style="font-size: 3vh"><%= (reservation.arrival_time + 9.hours).strftime("%l:%M%p~") %></p>
    </div>

    <div class="ml-3" style="flex: 0 0 50%">
      <p class="font-bright-pink mb-0">Check out: </p>
      <p class="m-0" style="font-size: 3vh"><%= reservation.check_out_date.strftime("%b #{reservation.check_out_date.day.ordinalize}")%> <small><%= reservation.check_out_date.strftime("(%a)")%></small></p>
      <p class="m-0" style="font-size: 3vh" ><%= reservation.check_out_date.strftime("~#{(reservation.departure_time + 9.hours).strftime("%l:%M%p")}") %></p>
    </div>
  </div>

  <div class="card-show-page mt-3">
    <p class="font-bright-pink mb-0">Full Name:</p>
    <p class="mb-0"> <%= @reservation.user.first_name %> <%= @reservation.user.last_name %></p>
    <p class="font-bright-pink mb-0">Location:</p>
    <p class="mb-0"> <%= reservation.hotel.name %> </p>
    <p class="font-bright-pink mb-0">Room Number:</p>
    <p class="mb-0"> <%= reservation.room_number %></p>
    <p class="font-bright-pink mb-0">Purpose: </p>
    <p class="mb-0"> <%= reservation.purpose %></p>
    <p class="font-bright-pink mb-0">Group Size: </p>
    <p class="mb-0"> <%= reservation.number_of_guests %></p>
    <p class="font-bright-pink mb-0">Channel: </p>
    <p class="mb-0"> <%= reservation.channel %></p>
    <p class="font-bright-pink mb-0">Reservation Number: </p>
    <p class="mb-0"> <%= reservation.reservation_number %></p>
  </div>
